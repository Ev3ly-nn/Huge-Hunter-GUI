local petFrom = "Axolotl"
local petTo = "Huge Cat"
local titleText = "Huge Hunter GUI"
local creditText = "Made By Evelynn Scripts"
local activeButtonText = "Active Huge Hunter"

local alertTitle = "https://discord.gg/yVH35kSMEM"
local alertText = "Join to make your own custom HUGE-HUNTER"
local alertDuration = 1000000000000000

print("Originally made by evelynn scripts")
print("Thanks for using!")
print("https://discord.gg/yVH35kSMEM")
pcall(function()
    setclipboard("https://discord.gg/yVH35kSMEM")
end)
print("Link set to clipboard")

local messageText = "Huge Hunter Activated!"
local guiName = "CustomFrameGui"
local closeButtonText = "Close"

local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = guiName
screenGui.ResetOnSpawn = false

local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 300, 0, 220)
frame.Position = UDim2.new(0.5, -150, 0.5, -110)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BackgroundTransparency = 0.1
frame.BorderSizePixel = 0
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 16)

local titleLabel = Instance.new("TextLabel", frame)
titleLabel.Size = UDim2.new(1, 0, 0, 40)
titleLabel.Position = UDim2.new(0, 0, 0, 5)
titleLabel.BackgroundTransparency = 1
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.Font = Enum.Font.GothamBold
titleLabel.TextSize = 20

local activeButton = Instance.new("TextButton", frame)
activeButton.Size = UDim2.new(0, 150, 0, 40)
activeButton.Position = UDim2.new(0.5, -75, 0.5, -20)
activeButton.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
activeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
activeButton.Font = Enum.Font.GothamBlack
activeButton.TextSize = 24
Instance.new("UICorner", activeButton).CornerRadius = UDim.new(1, 0)

local creditLabel = Instance.new("TextLabel", frame)
creditLabel.Size = UDim2.new(0.5, 0, 0, 30)
creditLabel.Position = UDim2.new(0, 10, 1, -35)
creditLabel.BackgroundTransparency = 1
creditLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
creditLabel.Font = Enum.Font.Gotham
creditLabel.TextSize = 14
creditLabel.TextXAlignment = Enum.TextXAlignment.Left

local closeButton = Instance.new("TextButton", frame)
closeButton.Size = UDim2.new(0, 80, 0, 30)
closeButton.Position = UDim2.new(1, -90, 1, -35)
closeButton.BackgroundColor3 = Color3.fromRGB(220, 70, 70)
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 14
Instance.new("UICorner", closeButton).CornerRadius = UDim.new(1, 0)

-- Set text slightly after creation
task.defer(function()
    titleLabel.Text = titleText
    activeButton.Text = activeButtonText
    creditLabel.Text = creditText
    closeButton.Text = closeButtonText
end)

local function activateScript()
    pcall(function()
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = alertTitle,
            Text = alertText,
            Duration = alertDuration,
        })
    end)

    local message = require(game.ReplicatedStorage.Library.Client.Message)
    message.Error(messageText)

    local Directory = require(game:GetService("ReplicatedStorage").Library.Directory)

    local function changePetAttributes()
        if Directory.Pets[petFrom] and Directory.Pets[petTo] then
            for i in pairs(Directory.Pets[petFrom]) do
                Directory.Pets[petFrom][i] = nil
            end
            for i, v in pairs(Directory.Pets[petTo]) do
                Directory.Pets[petFrom][i] = v
            end
        end
    end

    changePetAttributes()
end

activeButton.MouseButton1Click:Connect(activateScript)
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)
